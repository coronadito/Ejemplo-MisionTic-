}
 
<div class="text-center">
<form method="POST">
  <label for="nombre" class="form-label">Id Bus:</label>
  <input type="text" class="form-control" id="id" name="id" placeholder="Id Bus" required>
  <label for="marca" class="form-label">Marca Bus:</label>
  <input type="text" class="form-control" id="marca" name="marca" placeholder="Marca bus" required>
  <label for="modelo" class="form-label">Modelo Bus:</label>
  <input type="text" class="form-control" id="modelo" name="modelo" placeholder="Modelo Bus" required>
  <label for="kilometraje" class="form-label">Kilometraje Bus:</label>
  <input type="number" class="form-control" id="kilometraje" name="kilometraje" placeholder="Kilometraje Bus" required>
  <label for="noasientos" class="form-label">Numero asientos Bus:</label>
  <input type="text" class="form-control" id="numero_asientos" name="numero_asientos" placeholder="Numero asientos Bus" required>
  <label for="placa" class="form-label">Placa Bus:</label>
  <input type="text" class="form-control" id="placa" name="placa" placeholder="Placa Bus" required maxlength="6" minlength="6">
  <hr>
  <button type="submit" class="btn btn-success">Enviar</button>
</form>
</div>
